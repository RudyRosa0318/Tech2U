 <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                {{!-- Alertas --}}
                {{>flash}}
                <div class="card card-login">
                    <form class="form" action="/restablecer_password" method="POST">
                        <div class="card-header card-header-primary text-center">
                            <h4>Restablece tu contraseña</h4>
                        </div>
                        <p class="description text-center">Ingresa tu correo electrónico</p>
                        <div class="card-body">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">mail</i>
                                    </span>
                                </div>
                                <input class="form-control" type="email" name="email" id="email" placeholder="jconor@sky.net" required>
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="/signin">Ir al inicio de sesión</a>
                        </div>
                        <div class="footer text-center">
                            <button class="btn btn-primary btn-link btn-wd btn-lg" type="submit">Restablecer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>