{{>navigation}}
{{>flash}}
<div class="container">
  <div class="card shopping-cart">
    <div class="card-header bg-dark text-light mt-1">
      <i class="fa fa-shopping-cart " aria-hidden="true"></i>
      Carrito de Compras
      <a href="/" class="btn btn-outline-info btn-sm float-right">Continuar Comprando</a>
      <div class="clearfix"></div>
    </div>
    <div class="card-body">

      {{#if carrito.length}}
      <div class="row">
        {{#each carrito}}
        <div class="col-12 col-sm-12 col-md-2 text-center mt-1">
          <img class="img-responsive" src="{{url_image}}" alt="{{name}}" width="120" height="80">
        </div>
        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
          <h4 class="product-name"><strong>{{name}}</strong></h4>
          <h4>
            {{!-- <small>{{description}}</small> --}}
          </h4>
        </div>
        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
          <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
            <h6><strong>L {{price}} <span class="text-muted">x</span> {{qty}} <br><span class="text-muted">=</span> L
                {{distanceFixed total}}</strong></h6>
          </div>

          <div class="col-2 col-sm-2 col-md-2 text-right">
            <button type="button" class="btn btn-outline-danger btn-xs">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
      {{#unless carrito}}
      <div class="alert text-center" role="alert">No has agregado nada a tu carrito <br>
        <a href="/" class="btn btn-primary btn-md my-0 p">Buscar Productos <i class="fas fa-store"></i></a>
      </div>
      {{/unless}}


      <!-- END PRODUCT -->
      <hr>
      <hr>
    </div>
    <div class="card-footer">
   
      <div class="float-right" style="margin: 10px">
        <button class="btn btn-primary btn-md my-0 p" type="submit" onclick="#pay">Pagar
          <i class="fas fa-shopping-cart ml-1"></i>
        </button>
        <a href="" onclick="#pay" class="btn btn-success float-right">Pagar</a>
        <div class="float-right" style="margin: 5px">
          Total: <b>L {{distanceFixed total}}</b>
        </div>
        
        <script src="https://js.stripe.com/v3"></script>
        <button id="checkout-button">Pay</button>
        <script src="https://js.stripe.com/v3" class="stripe-button" id="pay"
          data-key="pk_test_51H5lSsKfonblX5qI0sCP1COhpM4VSGbXq4QNpSmFJLJe8GktNh8U7N8CXI8X7QPIEuIr7T5TEMZiZozEnX0l1qPt00Qt1M1sv2"
          data-amount={{distanceFixed total}} data-name=totalProd data-image="/img/logo2.png" data-locale="auto">
          </script>
      </div>
    </div>
  </div>
</div>
{{>footer}}