{{>navigation}}
{{>flash}}

<div class="container p-4">
    <a class="btn btn-md my-0 p" href="/links/add/" style=" background-color: #007717; color: #ffff;">
        <i class="fas fa-plus-square text-white" style="font-size: 2em;"></i><br> Agregar
    </a>
    {{#unless links}}
    <div class="alert alert-dark text-center" role="alert">
        No hay productos creados aún <a href="/links/add"> <br>
            Añade uno</a>
    </div>

    {{/unless}}
    <div class="mt-3 card-columns">

        {{#if links}}

        {{#each links}}
        <div class="">
            <div class="card text-center mb-2" style="border-color:#28A745;">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                    </a>
                    <img class="img-thumbnail col-lg-10 " src="{{url_image}}" alt="{{name}}">
                    {{!-- <p class="m-2">Descripción:<br>{{description}}</p> --}}
                    <p class="m-2" id="{{category.idCategory}}"> <strong>Categoría:</strong> <br>{{category}}</p>
                    <p class="m-2"> <strong>Precio:</strong> <br>L. {{price}}</p>

                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn" style="background-color: #007717; color: #ffff;" href="/links/edit/{{idProduct}}">
                      <i class="fas fa-edit"></i>  Editar
                    </a>
                    <a class="btn btn-danger" href="/links/delete/{{idProduct}}">
                        <i class="fa fa-trash" aria-hidden="true"></i> Borrar
                    </a>
                </div>
            </div>
        </div>
        {{/each}}


        {{/if}}

    </div>
</div>
{{>footer}}