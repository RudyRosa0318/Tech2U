<div class="container p-4">
    <div class="row">
        {{#if links}}
        {{#each links}}
        <div class="col-md-4">
            <div class="card text-center mb-2" style="border-color: aqua;">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                    </a>
                    <img class="img-thumbnail col-lg-10 " src="{{imgURL}}" alt="">
                    <p class="m-2">Descripción:<br>{{description}}</p>
                    <p class="m-2">Categoría:<br>{{category}}</p>
                    <p class="m-2">Precio:<br>L. {{price}}</p>

                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/links/delete/{{idProduct}}">
                        Borrar
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{idProduct}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{/each}}


        {{else}}


        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay productos creados aún.</p>
                <a href="/links/add">Añadir uno!</a>
            </div>
        </div>
        {{/if}}

    </div>
</div>